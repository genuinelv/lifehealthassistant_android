<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/select_date"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/calendar"

                android:onClick="onSelectDate"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_dietname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐名"/>

            <Spinner
                android:id="@+id/spinner_dietname"
                android:layout_width="182dp"
                android:layout_height="64dp"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/select_time"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/timer"
                android:onClick="onSelectTime"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="食物"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/food_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="图片"/>

                <Button
                    android:id="@+id/take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍照"
                    android:background="@drawable/divide_linearlayout"
                    android:backgroundTint="#2C9EC1"
                    android:onClick="onCamera"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:id="@+id/add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divide_linearlayout"
                    android:backgroundTint="#2C9EC1"
                    android:text="图库"
                    android:onClick="onPhoto"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/picture1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/picture2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/picture3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </LinearLayout>

            <Button
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divide_linearlayout"
                android:backgroundTint="#2266A3"
                android:text="上传"
                android:onClick="onAllLoad"/>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"/>

</LinearLayout>