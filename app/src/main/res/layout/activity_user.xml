<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/userpic_show_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/admin" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/username_show_text"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:textSize="20dp"
                        android:text="系统用户"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/usersex_show_text"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/username_show_text"
                        android:text="无"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:onClick="onDeleteUser"
                        android:text="注销账号"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/updateUInfo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onUpdateUInfo"
                android:text="修改个人信息 " />
            <Button
                android:id="@+id/show_health_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onShowHealth"
                android:text="健康档案" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onExit"
                android:text="退出登录" />


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/mainbutton3"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMain3"
            android:text="首页"/>
        <Button
            android:id="@+id/medicalbutton3"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMedical3"
            android:text="医疗"/>
        <Button
            android:id="@+id/personbutton3"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPerson3"
            android:text="个人"/>

    </LinearLayout>



</LinearLayout>
