<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="#4FA17F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身体质量指数(BMI)"
        android:textSize="20dp"/>
    <LinearLayout
        android:background="#458348"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:textColor="#EADECC"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="  BMI[Body Mass Index] 即BMI指数，也叫身体质量指数，是衡量是否肥胖和标准体重的重要指标。适用范围：18至65岁的人士。儿童、发育中的青少年、孕妇、乳母、老人及身型健硕的运动员除外。世界卫生组织认为BMI指数保持在22左右是比较理想的。"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:background="@color/themeWhite"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入您的身高、体重：" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高："/>

        <EditText
            android:id="@+id/height_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CM（厘米）"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重："/>

        <EditText
            android:id="@+id/weight_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KG（公斤）"/>

    </LinearLayout>



    <Button
        android:layout_gravity="center_horizontal"
        android:background="@drawable/divide_linearlayout"
        android:backgroundTint="#85C896"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onBMICompute"
        android:text="计算"/>

    <TextView
        android:id="@+id/bmi_text"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />





</LinearLayout>