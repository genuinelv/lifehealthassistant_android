<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/themeWhite"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="饮食健康"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                    <Button
                        android:backgroundTint="#FF9C07"
                        android:layout_weight="1"
                        android:id="@+id/show_disease_button"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="记录饮食"
                        android:onClick="onSaveDiet_func"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <Button
                        android:backgroundTint="#FFD607"
                        android:layout_weight="1"
                        android:id="@+id/save_disease_button"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="查看饮食"
                        android:onClick="onShowDietByDate_func" />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                    <Button
                        android:layout_weight="1"
                        android:backgroundTint="#E6FF07"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="数据分析"
                        android:onClick="onShowDietByFood_func"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <Button
                        android:layout_weight="1"
                        android:backgroundTint="#B5FF07"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="食物百科"
                        android:onClick="onFood_func" />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@color/themeLightGray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="医疗健康"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                    <Button
                        android:backgroundTint="#8BFF07"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="查看病历"
                        android:onClick="onShowDisease_func"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <Button
                        android:backgroundTint="#588701"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="创建病历"
                        android:onClick="onSaveDisease_func" />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@color/themeLightGray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:text="运动健康"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                    <Button
                        android:backgroundTint="#07FFCD"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="BMI计算器"
                        android:onClick="onBMI_func"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <Button
                        android:backgroundTint="#07F7FF"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:background="@drawable/divide_linearlayout"
                        android:text="体脂率计算器"
                        android:onClick="onFat_func" />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





    </ScrollView>


    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button

            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMain2"
            android:text="首页"/>
        <Button

            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onFunction2"
            android:text="功能"/>
        <Button

            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPerson2"
            android:text="个人"/>

    </LinearLayout>


</LinearLayout>